//- Nav item 
mixin block-items-service(clasecolor, linkUrl, name, imageUrl)
		a(href=linkUrl class=clasecolor class=['field', 'field--name-link']) 
			span
				img(src=imageUrl)
				= name
//- Card home
mixin block-card-service(claseanima, clasecolor, cardtitle)
	div.card-service.add-animation(class=claseanima)
		div(class=clasecolor class=['card-title',])
			div.field.field--name-card-title
				= cardtitle
		div.field.field--name-card-body
			block

//- item sector
mixin block-items-sector(claseanima, name, imageUrl)
	li.field.field--name-item-sector.add-animation(class=claseanima)
		div.item-sector
			span
				img(src=imageUrl)
			span
				= name

//- Bloque sidebar 
mixin block-sidebar(clasecolor, titulo)
	div(class=clasecolor class=['block', 'block-sidebar'])
		div.field.field--name-logo
			a(href='/') 
				img(src="/images/logo-iex-dark.svg" alt="logo")
		div.field.field--name-title 
			h2= titulo
		div.field.field--name-desc 
			block
		div.field.field--name-redes 
			a(href='https://www.facebook.com/universidadelbosque' target="_blank") 
				img(src="/images/icon-facebook.svg" alt="facebook")
			a(href='https://www.linkedin.com/edu/universidad-el-bosque-11599' target='_blank') 
				img(src="/images/icon-linkedin.svg" alt="twitter")

//- Bloque slider video
mixin block-slider-video(linkUrlvideo)
	.item-video
		a.owl-video.embed-responsive-item(href=linkUrlvideo)

