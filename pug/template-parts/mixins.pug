//- nav
mixin nav(clasedireccion)
	ul.nav(class=clasedireccion)
		block

mixin nav-item(href, item)
	li.nav-item
		a.nav-link(href=href) 
			= item


//-card
mixin card(titlecard)
	.card
		.field.field--name-card-title 
			= titlecard
		.field.field--name-card-text
			block



